<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_50"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            android:radius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_ready"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Configuration Section -->
        <TextView
            android:id="@+id/config_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_configuration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Vector Dimension -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dimension_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_vector_dimension"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/dimension_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="10"
                android:max="256"
                android:progress="128" />

            <TextView
                android:id="@+id/dimension_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="128"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end" />
        </LinearLayout>

        <!-- Distance Metric -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/metric_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_distance_metric"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <RadioGroup
                android:id="@+id/metric_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/metric_l2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/metric_l2"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/metric_cosine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/metric_cosine" />

                <RadioButton
                    android:id="@+id/metric_dot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/metric_dot" />
            </RadioGroup>
        </LinearLayout>

        <!-- HNSW Parameters -->
        <TextView
            android:id="@+id/hnsw_params_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_hnsw_parameters"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- HNSW M -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/hnsw_m_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_m_connections_per_node"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/hnsw_m_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="5"
                android:max="50"
                android:progress="16" />

            <TextView
                android:id="@+id/hnsw_m_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end" />
        </LinearLayout>

        <!-- HNSW efConstruction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/hnsw_ef_construction_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_ef_construction"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/hnsw_ef_construction_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="50"
                android:max="500"
                android:progress="200" />

            <TextView
                android:id="@+id/hnsw_ef_construction_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end" />
        </LinearLayout>

        <!-- Search K -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/search_k_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_search_k"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/search_k_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="1"
                android:max="20"
                android:progress="5" />

            <TextView
                android:id="@+id/search_k_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end" />
        </LinearLayout>

        <!-- VectorStore Section -->
        <TextView
            android:id="@+id/vector_store_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_vector_store"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- VectorStore Buttons Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/create_vector_store_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_create_vector_store"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/add_vectors_to_store_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_add_vectors_to_store"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- VectorStore Buttons Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/search_vector_store_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_search_vector_store"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/clear_vector_store_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_clear_vector_store"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/release_vector_store_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_release_vector_store"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- VectorStore Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/vector_store_info_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VectorStore ID: @string/none\nVector count: 0"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- VectorStore Results -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@color/white"
            android:elevation="1dp"
            android:visibility="gone"
            android:id="@+id/vector_store_results_container">

            <TextView
                android:id="@+id/vector_store_results_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_search_results"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vector_store_results_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>

        <!-- HNSWIndex Section -->
        <TextView
            android:id="@+id/hnsw_index_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_hnsw_index"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- HNSWIndex Buttons Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/create_hnsw_index_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_create_hnsw_index"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/add_vectors_to_hnsw_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_add_vectors_to_hnsw"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- HNSWIndex Buttons Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/search_hnsw_index_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_search_hnsw_index"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/clear_hnsw_index_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_clear_hnsw_index"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/release_hnsw_index_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_release_hnsw_index"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- HNSWIndex Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/hnsw_index_info_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HNSWIndex ID: @string/none\nVector count: 0"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- HNSWIndex Results -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@color/white"
            android:elevation="1dp"
            android:visibility="gone"
            android:id="@+id/hnsw_index_results_container">

            <TextView
                android:id="@+id/hnsw_index_results_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_search_results"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hnsw_index_results_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
