# Centralized Build Configuration
# This file contains all environment variables needed for building different SDKs
# Build scripts will read from this file and update it with detected values
# When downloaded from GitHub, all variables are empty - scripts will auto-detect values or guide you to set them

# --- Core Build Settings ---
[core]
# Build type: Debug or Release
BUILD_TYPE=Release
# Verbose output: true or false
VERBOSE=false
# Build directory name
BUILD_DIR=build
# Number of CPU cores to use (0 for auto-detect)
NUM_CORES=0
# Skip cleaning build directories: true or false
NO_CLEAN=false
# Keep intermediate build files: true or false
KEEP_BUILD=false

# --- iOS Build Settings ---
[ios]
# Xcode developer directory
DEVELOPER_DIR=
# iOS deployment target
IOS_DEPLOYMENT_TARGET=14.0
# iOS architectures (simulator and device)
IOS_ARCHS=arm64 x86_64
# Whether to build for simulator only
simulator_only=false

# --- Android Build Settings ---
[android]
# Android SDK path
ANDROID_HOME=
# Android NDK path (auto-detected from ANDROID_HOME/ndk/[first available version])
ANDROID_NDK_PATH=
# Android platform version
ANDROID_PLATFORM=android-24
# Android architectures
ARCHITECTURES=arm64-v8a x86_64 armeabi-v7a x86
# Java home path
JAVA_HOME=

# --- Flutter SDK Build Settings ---
[flutter]
# Flutter SDK path
FLUTTER_SDK_PATH=
# Force rebuild: true or false
FORCE_REBUILD=false
# Clean build: true or false
CLEAN_BUILD=false

# --- React Native SDK Build Settings ---
[react-native]
# React Native CLI path
RN_CLI_PATH=
# Android build variant
RN_ANDROID_VARIANT=release
# iOS build configuration
RN_IOS_CONFIGURATION=Release

# --- Capacitor Plugin Build Settings ---
[capacitor]
# Capacitor CLI path
CAP_CLI_PATH=
# Platforms to build (android, ios)
CAP_PLATFORMS=android ios
