{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2017"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node", "jest"]
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}